# .env do Backend

# Configurações do servidor
PORT=3000

# URL do banco de dados MongoDB
DB_URL=mongodb://localhost:27017/restaurante

# Chave secreta para geração de tokens JWT
JWT_SECRET=supersecreta

# URL da API de pagamento externa (opcional)
PAYMENT_API_URL=https://api.pagamentos.com/v1

# Chave de API para autenticação na API de pagamento (opcional)
PAYMENT_API_KEY=chave-de-api-secreta

# Configurações de e-mail para envio de notificações
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=email@gmail.com
SMTP_PASS=senha-do-email
